{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "go-lint",
            "type": "shell",
            "command": "golangci-lint run",
            "problemMatcher": "$go"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-x",
                "-v",
                "-o",
                "${workspaceFolder}",
                "${workspaceFolder}\\cmd"
            ],
            "problemMatcher": "$go"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "go run ${workspaceFolder}/cmd",
            "group": "build",
            "problemMatcher": "$go"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "go test ${workspaceFolder}/...",
            "group": "test"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "go clean -x ${workspaceFolder}",
            "group": "none",
            "problemMatcher": "$go"
        }
    ],
    "problemMatchers": {
        "$go": {
            "owner": "go",
            "fileLocation": [
                "relative",
                "${workspaceFolder}"
            ],
            "pattern": [
                {
                    "regexp": "^([^\\s].*)$",
                    "file": 1
                },
                {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|info):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            ]
        }
    }
}